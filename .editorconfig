root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
tab_width = 4
trim_trailing_whitespace = true

[{*.c,*.h}]
indent_style = tab
tab_width = 4

[*.json]
indent_style = space
indent_size = 2

[*.toml]
indent_style = tab
tab_width = 2

[*.md]
trim_trailing_whitespace=false

[makefile]
indent_style = tab
tab_width = 4
